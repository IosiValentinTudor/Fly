<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="#CA03DF"
                android:startColor="#467BFF" />
            <corners android:topLeftRadius="20dp" android:topRightRadius="50dp" android:bottomRightRadius="20dp" android:bottomLeftRadius="50dp"/>

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFF" />
            <corners android:topLeftRadius="20dp" android:topRightRadius="50dp" android:bottomRightRadius="20dp" android:bottomLeftRadius="50dp"/>

        </shape>
    </item>
</layer-list>